@using Demo.BLL.DTOs.DepartmentDtos
@model IEnumerable<DepartmentDto> // Model

<h1>All Departments</h1>
<a class="btn btn-primary my-3" asp-controller="Department" asp-action="Create">Create New Department</a>
<br />

@if (Model?.Any() ?? false)
{
	<table class="table table-striped table-hover mt-2">
		<thead class="text-center">
			<tr>
				<th>@Html.DisplayNameFor(D => D.Code)</th>
				<th>@Html.DisplayNameFor(D => D.Name)</th>
				<th>@Html.DisplayNameFor(D => D.Description)</th>
				<th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody class="text-center">
			@foreach (var dept in Model)
			{
				<tr>
					<td>@dept.Code</td>
					<td>@dept.Name</td>
					<td>@dept.Description</td>
					<td>@dept.DateOfCreation</td>
					<td><a class="btn btn-primary" asp-action="Details" asp-route-id="@dept.DeptId"><i class="fas fa-eye"></i>  Details</a></td>
					<td><a class="btn btn-success" asp-action="Edit" asp-route-id="@dept.DeptId"><i class="fas fa-edit"></i>  Update</a></td>
					@* <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@dept.DeptId"><i class="fas fa-trash"></i>  Delete</a></td> *@
					<td>
						<button type="button"
								class="btn btn-danger"
								data-bs-toggle="modal"
								data-bs-target="#DeleteModal-@dept.DeptId">
							<i class="fas fa-trash"></i> Delete
						</button>

						<div class="modal fade"
							 id="DeleteModal-@dept.DeptId"
							 tabindex="-1"
							 aria-labelledby="exampleModalLabel"
							 aria-hidden="true">
							<div class="modal-dialog">
								<div class="modal-content">
									<div class="modal-header">
										<h1 class="modal-title fs-5" id="exampleModalLabel">
											Delete Department
										</h1>
										<button type="button"
												class="btn-close"
												data-bs-dismiss="modal"
												aria-label="Close"></button>
									</div>
									<div class="modal-body">Are You Sure to Delete this Department?</div>
									<div class="modal-footer">
										<form asp-action="Delete"
											  asp-controller="Department"
											  asp-route-id="@dept.DeptId"
											  class="mt-4">
											<button type="button"
													class="btn btn-secondary"
													data-bs-dismiss="modal">
												Close
											</button>
											<input type="submit" value="Delete" class="btn btn-danger" />
										</form>
									</div>
								</div>
							</div>
						</div>

					</td>

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-info mt-2">
		<h2>No Departments Found!!</h2>
	</div>
}